<h1>MONGODB - EXERCISE</h1>
<section class="insert">
    <h3>Insert Data</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h3>Get Data</h3>
    <form id="get-data" method="get">
        <div class="input">
            <label for="title">Title</label>
            <input class="block" type="data" name="Title" value="{{item.title}}"></input>
        </div>
    <button type="viewData">Get Data</button>
    </form>
    <hr>
    <div class="displayData">
{{!--         {{# each items}} --}}
            <article>
            <a href="/index/{{_items}}">Update</a>
                <ol>
                    <li>Title: {{ this.title }}</li>
                    <li>Content: {{ this.content }}</li>
                    <li>Author: {{ this.author }}</li>
                </ol>
            </article>
{{!--         {{ /each}} }} --}}
    </div>


</section>
